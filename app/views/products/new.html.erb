<div class="container">
  <h2>New Product</h2>

  <%= simple_form_for( @product, wrapper: :floating_labels_form,
    wrapper_mappings: {
      select:        :floating_labels_select
    },defaults: { wrapper_html: { class: "form-floating mb-3" },placeholder:' ' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :stock %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create" ,class:'btn btn-primary'%>
    </div>
  <% end %>
</div>
