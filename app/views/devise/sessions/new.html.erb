<div class="container">
  <h2>Inicia Sesión</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),wrapper: :floating_labels_form,
    wrapper_mappings: {
      select:        :floating_labels_select
    },defaults: { wrapper_html: { class: "form-floating mb-3" },placeholder:' ' }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Inicia sesión" ,class:'btn btn-success text-light'%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
